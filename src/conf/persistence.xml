<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SPTVR19WebShopPU" transaction-type="JTA">
    <jta-data-source>java:app/jdbc/sptvr19webshop2</jta-data-source>
    <class>entity.Furniture</class>
    <class>entity.Buyer</class>
    <class>entity.History</class>
    <class>entity.User</class>
    <class>entity.Role</class>
    <class>entity.UserRoles</class>
    <class>entity.Cover</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
